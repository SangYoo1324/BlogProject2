<!doctype html>
<html lang="En">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/bootstrap.css">
    <link rel="stylesheet" href="/bootstrap.min.css">
    <!--    JQuery-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

    <!--    Summernote-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>



    <!--    fontAwsome-->
    <script src="https://kit.fontawesome.com/edff7358ca.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style.css">
    <title>document</title>
</head>
<body>
{{>layouts/header}}
<section class="showPost">
<div class="container">

    <table class="table">
        <thead>
        <tr>
            <th scope="col">POST</th>
        </tr>
        </thead>

        <tbody>
        <tr>
            <th scope="row"><p>Title</p>
                <p>{{target.title}}</p></th>
<!--            <br><hr>-->
        </tr>
        <tr>
            <th scope="row">
                <p>Poster</p>
                <p>{{target.user.username}}</p>
                </th>
<!--            <br><hr>-->
        </tr>
        <tr>
            <th scope="row"><p>Content</p>

                <p>{{{target.content}}}</p></th>
<!--            <br><hr>-->
        </tr>
        </tbody>


    </table>

    <button id="btn-delete" data-post-board_id={{target.board_id}} data-post-username="{{target.user.username}}" class="btn btn-danger mr-2"> Delete</button>
    <button id="btn-back" class="btn btn-light mr-2"><a href="/board/postList/{{user.username}}">Back</a></button>
    <button id="btn-edit"
            data-post-board_id="{{target.board_id}}"
            data-post-username="{{target.user.username}}"
            data-current-username="{{user.username}}"
            data-post-title="{{target.title}}"
            data-post-content="{{target.content}}"
            data-bs-toggle="modal"
            data-bs-target="#post-edit-modal"

            class="btn btn-primary">Edit</button>
</div>
    </section>
<!--reply-->
<section class="reply">
    <div class="container">
        <form>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Write Comment</label>
            </div>
            <div class="mb-3">
                <label for="exampleFormControlTextarea1" class="form-label">Contents</label>
                <input id="reply-content" name="contentslot" type="text" class="form-control summernote">
            </div>
        </form>
        <button id="reply-btn-post" class="btn btn-primary"
                data-reply-board_id="{{target.board_id}}"
                data-reply-user_id="{{user.user_id}}"
        >Post</button>
    </div>

    <h3>Comments</h3>
    {{#Reply}}
    <div class="container mb-2">
        <div class="card">
            <div class="card-header">
                <div><h4>{{reply_id}}</h4></div>
                <div class="button-group">
                <button  type="button"
                        class="reply-btn-delete btn btn-danger"
                        data-reply-reply_id = "{{reply_id}}"
                        data-reply-board_id = "{{target.board_id}}"
                        data-reply-user_id = "{{user.user_id}}"
                >Delete</button>
                <button type="button" class="btn btn-info"
                        id="reply-btn-edit"
                        data-bs-toggle="modal"
                        data-bs-target="#reply-edit-modal"
                        data-reply-content="{{content}}"
                >Edit</button>
            </div>


            </div>
            <div class="card-body">
                <p class="card-text">{{{content}}}</p>
            </div>
        </div>
    </div>
        {{/Reply}}
</section>

<!--reply-->

<!-- Post Modal -->
<div class="modal fade" id="post-edit-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div id="modal-user-board_id-identifier" data-username="{{user.username}}"
         data-board_id="{{target.board_id}}" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Post</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">Tilte</label>
                        <input type="text" class="form-control" id="modal-title" placeholder="Write Contents">
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Contents</label>
                        <input id="modal-content" name="contentslot" type="text" class="form-control summernote">
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button id="btn-edit-modal" class="btn btn-primary" data-bs-dismiss="modal">Post</button>
            </div>
        </div>
    </div>
</div>

<!-- Post modal-->

<!--reply modal-->
<div class="modal fade" id="reply-edit-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div id="modal-user-board_id-identifier" data-username="{temp}"
         data-board_id="{temp}" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Edit Post</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Contents</label>
                        <input id="reply-modal-content" name="contentslot" type="text" class="form-control summernote">
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button id="btn-reply-edit-modal" class="btn btn-primary" data-bs-dismiss="modal">Post</button>
            </div>
        </div>
    </div>
</div>
<!--reply modal-->
<!--{{>layouts/footer}}-->

<script src="/js/board.js"></script>
<script src="/js/reply.js"></script>
<script src="/js/boardShowPost.js"></script>
<!-- Option 1: Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8" crossorigin="anonymous"></script>

<script>
      $('.summernote').summernote({
        placeholder: 'Hello stand alone ui',
        tabsize: 2,
        height: 120,
        toolbar: [
          ['style', ['style']],
          ['font', ['bold', 'underline', 'clear']],
          ['color', ['color']],
          ['para', ['ul', 'ol', 'paragraph']],
          ['table', ['table']],
          ['insert', ['link', 'picture', 'video']],
          ['view', ['fullscreen', 'codeview', 'help']]
        ]
      });
    </script>
</body>
</html>